<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MulloJExamen2P.Views.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout
        Padding="20"
        Spacing="30">

        <Label 
            Text="Acerca de la aplicación"
            FontSize="24"
            HorizontalOptions="Center" />

        <Grid
            RowDefinitions="Auto,Auto"
            ColumnDefinitions="*,*"
            Padding="10"
            BackgroundColor="#f0f0f0"
            ColumnSpacing="20"
            RowSpacing="20">


            <StackLayout Grid.Row="0" Grid.Column="0">
                <Label Text="Nombre:" FontAttributes="Bold"/>
                <Label Text="Josue Mullo"/>
            </StackLayout>


            <StackLayout Grid.Row="0" Grid.Column="1">
                <Label Text="Fecha de nacimiento:" FontAttributes="Bold"/>
                <Label Text="02/06/2000"/>
            </StackLayout>

            <StackLayout Grid.Row="1" Grid.Column="0">
                <Label Text="Intereses:" FontAttributes="Bold"/>
                <Label Text="Programación, Videojuegos"/>
            </StackLayout>

            <StackLayout Grid.Row="1" Grid.Column="1">
                <Label Text="Versión:" FontAttributes="Bold"/>
                <Label Text="0.3"/>
            </StackLayout>
        </Grid>
    </VerticalStackLayout>
</ContentPage>
